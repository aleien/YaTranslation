<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_task_base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_task_toolbar_close_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close_black_14dp" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/fragment_task_main_toolbar_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@+id/fragment_task_toolbar_next_image_view"
                android:layout_toRightOf="@id/fragment_task_toolbar_close_image_view" />

            <ImageView
                android:id="@id/fragment_task_toolbar_next_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_next_black_14dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/fragment_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="TEST"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:textAllCaps="true" />

    <FrameLayout
        android:id="@+id/fragment_task_base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>